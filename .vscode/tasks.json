{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": ["npm", "run", "build", "--workspaces", "--if-present"],
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: build --workspaces",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
