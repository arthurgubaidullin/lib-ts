{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": ["npm", "run", "test", "--workspaces", "--if-present"],
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "npm: test",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "dependsOn": ["npm: build"]
    },
    {
      "type": "shell",
      "command": ["npm", "run", "build", "--workspaces", "--if-present"],
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "label": "npm: build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["npm: build", "npm: test"]
    }
  ]
}
